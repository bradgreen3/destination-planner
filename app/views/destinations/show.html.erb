<div class="container">
  <p id="notice"><%= notice %></p>

  <h3>
    <%= @destination.name %>
  </h3>

  <p>
    <strong>Zip:</strong>
    <%= @destination.zip %>
  </p>

  <p>
    <strong>Description:</strong>
    <%= @destination.description %>
  </p>

  <%= image_tag(@destination.image_url) %>

  <div class="row">
    <h4>Forecast for <%= @destination.name %>:</h4>

    <table class="table table-striped table-condensed">
    <thead>
      <tr>
        <th>Date</th>
        <th>High</th>
        <th>Low</th>
        <th>Conditions</th>
      </tr>
    </thead>
    <tbody>
      <% @forecast_days.each do |day| %>
      <tr>
          <td> <%= day.full_date %> </td>
          <td> <%= day.high %> </td>
          <td> <%= day.low %> </td>
          <td> <%= day.conditions %> </td>
      </tr>
      <% end %>
    </tbody>
  </table>

  </div>

  <div class="row">
    <%= link_to 'Edit', edit_destination_path(@destination) %> |
    <%= link_to 'Back', destinations_path %>
  </div>
</div>
